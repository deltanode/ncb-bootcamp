<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<!-- main start -->
<section class="bg-light">
    <div class="container">
        <img src="https://www.hostinger.com/blog/wp-content/uploads/sites/4/2020/11/hostinger-workplace-featured-img-1536x634.png" class="card-img-top" alt="...">
    </div>
</section>
<section class="bg-light">
    <div class="container pt-5">
        <div class="row">
            <!-- sidebar-start -->
            <div class="col-lg-2 bg-white">
                <div class="position-sticky top-50">
                    <div class="card border-0">
                        <div class="card-body">
                          <h5 class="card-title">Username</h5>
                          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                          <a href="#" class="btn btn-outline-primary text-decoration-none text-uppercase">follow</a>
                        </div>
                      </div>
                </div>
            </div>
            <!-- sidebar ends -->
            <div class="col-lg-7 bg-white shadow p-5 mb-5 bg-body rounded" style="z-index:1;">
                <h1 class="mb-3"><%= blog.title %></h1>
                <nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Varun Sharma</a></li>
                      <li class="breadcrumb-item active" aria-current="page">November 03, 2020</li>
                      <li class="breadcrumb-item active" aria-current="page">2 min Read</li>
                      <li class="breadcrumb-item"><a href="/blog/<%= blog._id %>/edit" class="btn btn-outline-primary text-decoration-none">Edit</a></li>
                      <li class="breadcrumb-item">
                          <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                              <button class="btn btn-danger">Delete</button>
                          </form>
                      </li>
                    </ol>
                </nav>
                <img src="<%= blog.img %>" class="card-img-top" alt="...">
                <p class="pt-3"><%= blog.content %></p>
                <!-- discussion-section -->
                <div class="mt-5 pb-5 border-top border-dark-50">
                      <h3 class="mt-5 mb-3 text-dark">Discussion</h3>
                      <form action="/blog/<%= blog._id%>/comment" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Enter Name</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter Name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                          </div>
                          <div class="mb-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea class="form-control" id="comment" rows="3" name="comment" required></textarea>
                          </div>
                          <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
                <!-- comment section -->
                <div class="border-top">
                    <h3 class="mt-3 mb-4 text-dark">Comments</h3>
                    <%for (const comment of blog.comments){%>
                        <div class="card mt-3">
                            <h5 class="card-header"><%= comment.username%></h5>
                            <div class="card-body">
                              <!-- <h5 class="card-title">Special title treatment</h5> -->
                              <p class="card-text"><%= comment.comment%></p>
                              <a href="#" class="card-link text-decoration-none disabled" >Reply</a>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>
            <!-- sidebar start -->
            <div class="col-lg-3 bg-white">
                <div>
                    <div class="mx-3 my-4">
                        <h4 class="text-secondary">Top Stories</h4>
                    </div>
                    <div class="card m-3 shadow-sm p-3 mb-5 bg-body rounded">
                        <img src="https://images.unsplash.com/photo-1592901475831-4fb0be405fc9?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDIwfEo5eXJQYUhYUlFZfHxlbnwwfHx8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=60" class="card-img-top" alt="...">
                        <div class="card-body">
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                          <h5 class="card-title">Card title</h5>
                          <p class="card-text">This is a wider card with supporting text below as ...</p>
                          <a href="#" class="card-link text-decoration-none">Read more</a>
                        </div>
                    </div>
                    <div class="card m-3">
                        <img src="https://images.unsplash.com/photo-1615503340245-0f23a905dde1?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDI3fEo5eXJQYUhYUlFZfHxlbnwwfHx8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=60" class="card-img-top" alt="...">
                        <div class="card-body">
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                          <h5 class="card-title">Card title</h5>
                          <p class="card-text">This is a wider card with supporting text below as ...</p>
                          <a href="#" class="card-link text-decoration-none">Read more</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- sidebar ends -->
        </div>
    </div>
</section>
<section>
    <div class="container-fluid bg-primary p-5">
        <div class="text-center">
            <h3 class="text-white p-3">Don't miss the latest updates!</h3>
            <form action="" class="w-25 m-auto">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Submit email for newsletter" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-danger" type="button" id="button-addon2">Subscribe</button>
                  </div>
            </form>
        </div>
    </div>
</section>
<!-- main end -->
<%- include('../partials/footer') %>